<Window x:Class="MedCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:notes="clr-namespace:MedCompanion.Views.Notes"
        xmlns:patient="clr-namespace:MedCompanion.Views.Patient"
        xmlns:patients="clr-namespace:MedCompanion.Views.Patients"
        xmlns:ordonnances="clr-namespace:MedCompanion.Views.Ordonnances"
        xmlns:attestations="clr-namespace:MedCompanion.Views.Attestations"
        xmlns:formulaires="clr-namespace:MedCompanion.Views.Formulaires"
        xmlns:documents="clr-namespace:MedCompanion.Views.Documents"
        Title="MedCompanion - Assistant Pédopsychiatrie"
        Height="900" Width="1600"
        MinHeight="700" MinWidth="1200"
        Background="#F5F5F5">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header avec recherche -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="MedCompanion" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="Assistant Pédopsychiatrie avec IA" FontSize="12" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Barre LLM (Sélecteur + Indicateur) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- ComboBox sélection modèle -->
                    <ComboBox x:Name="LLMModelCombo"
                              Width="220"
                              Height="40"
                              FontSize="13"
                              Padding="10,0"
                              VerticalContentAlignment="Center"
                              SelectionChanged="LLMModelCombo_SelectionChanged"
                              Margin="0,0,10,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Grid.Column="2"
                                                              Focusable="False"
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                              ClickMode="Press"
                                                              Background="White"
                                                              BorderBrush="#BDC3C7"
                                                              BorderThickness="1">
                                                    <ToggleButton.Style>
                                                        <Style TargetType="ToggleButton">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border x:Name="Border" 
                                                                                Background="{TemplateBinding Background}" 
                                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                                                CornerRadius="8">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition/>
                                                                                    <ColumnDefinition Width="20"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <ContentPresenter Grid.Column="0" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                                                <Path x:Name="Arrow" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" Fill="#666666"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ToggleButton.Style>
                                                </ToggleButton>
                                                <ContentPresenter x:Name="ContentSite" 
                                                                  IsHitTestVisible="False" 
                                                                  Content="{TemplateBinding SelectionBoxItem}" 
                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                                                  Margin="10,0,30,0" 
                                                                  VerticalAlignment="Center" 
                                                                  HorizontalAlignment="Left"/>
                                                <Popup x:Name="Popup" 
                                                       Placement="Bottom" 
                                                       IsOpen="{TemplateBinding IsDropDownOpen}" 
                                                       AllowsTransparency="True" 
                                                       Focusable="False" 
                                                       PopupAnimation="Slide">
                                                    <Grid x:Name="DropDown" 
                                                          SnapsToDevicePixels="True" 
                                                          MinWidth="{TemplateBinding ActualWidth}" 
                                                          MaxHeight="300">
                                                        <Border x:Name="DropDownBorder" 
                                                                Background="White" 
                                                                BorderBrush="#BDC3C7" 
                                                                BorderThickness="1" 
                                                                CornerRadius="8">
                                                            <Border.Effect>
                                                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                                                            </Border.Effect>
                                                        </Border>
                                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                        </ScrollViewer>
                                                    </Grid>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                    
                    <!-- Indicateur de statut circulaire -->
                    <Border x:Name="LLMStatusIndicator"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="#95A5A6"
                            ToolTip="LLM initialisation..."
                            Margin="0,0,10,0">
                        <TextBlock x:Name="LLMStatusIcon"
                                   Text="🤖" 
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <!-- Bouton Analyse des prompts -->
                <Button x:Name="AnalysePromptsBtn"
                        Grid.Column="4"
                        Content="⚙️ Prompts"
                        Height="45"
                        Padding="20,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#8E44AD"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        Click="AnalysePromptsBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Search Bar -->
                <patient:PatientSearchControl Grid.Column="6" DataContext="{Binding PatientSearchViewModel}"/>
            </Grid>
        </Border>
        
        <!-- Carte patient -->
        <Border x:Name="PatientCardPanel" Grid.Row="1" Background="#E3F2FD" Padding="20,15" BorderBrush="#90CAF9" BorderThickness="0,0,0,2" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="PatientNameLabel" Text="Nom Prénom" FontSize="20" FontWeight="Bold" Foreground="#1976D2"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="PatientAgeLabel" Text="" FontSize="13" Foreground="#424242" Margin="0,0,15,0"/>
                        <TextBlock x:Name="PatientDobLabel" Text="" FontSize="13" Foreground="#424242" Margin="0,0,15,0"/>
                        <TextBlock x:Name="PatientSexLabel" Text="" FontSize="13" Foreground="#424242"/>
                    </StackPanel>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        x:Name="OpenPatientFolderBtn"
                        Content="📁 Ouvrir dossier"
                        Height="40"
                        Padding="15,0"
                        FontSize="13"
                        Background="#1976D2"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1565C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content: Colonne patients fixe + 3 colonnes -->
        <Grid Grid.Row="2" Margin="20">
            <!-- Grid principal avec colonnes -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="PatientsPanelColumn" Width="0" MinWidth="0" MaxWidth="300"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="250" MinWidth="200"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="2*" MinWidth="400"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="3*" MinWidth="600"/>
                </Grid.ColumnDefinitions>

            <!-- Colonne Liste Patients (masquée par défaut) -->
            <Border x:Name="PatientsPanel"
                    Grid.Column="0"
                    Background="White"
                    CornerRadius="8"
                    Padding="12"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <patients:PatientListControl x:Name="PatientListControlPanel"/>
            </Border>

            <!-- COL G: Liste Notes uniquement -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="📋 Notes" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                        <ListBox x:Name="NotesList"
                                     ItemsSource="{Binding NoteViewModel.Notes}"
                                     SelectedItem="{Binding NoteViewModel.SelectedNote}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="Margin" Value="0,0,0,5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Border" 
                                                            Background="{TemplateBinding Background}" 
                                                            Padding="{TemplateBinding Padding}"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="1"
                                                            CornerRadius="6">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#90CAF9"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DateLabel}" FontSize="11" FontWeight="SemiBold" Foreground="#3498DB"/>
                                            <TextBlock Text="{Binding Preview}" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>
            </Border>
            
            <!-- COL C: Notes brute/structurée -->
            <!-- COL C: Notes brute/structurée -->
             <notes:NotesControl x:Name="NotesControlPanel" Grid.Column="4"/>

            
            <!-- COL D: Assistant IA avec Onglets -->
            <Border Grid.Column="6" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="💬 Assistant IA" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" Foreground="#2C3E50"/>
                    
                    <TabControl x:Name="AssistantTabControl" Grid.Row="1" BorderThickness="0" Background="Transparent">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="Border" Background="Transparent" Padding="12,8" Margin="0,0,5,0" CornerRadius="6,6,0,0">
                                                <ContentPresenter ContentSource="Header"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>
                        
                        <!-- Onglet Discussion -->
                        <TabItem Header="💬 Discussion">
                            <Grid Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Margin="0,0,0,12" Background="#FAFAFA">
                                    <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Padding="10">
                                        <StackPanel x:Name="ChatList"/>
                                    </ScrollViewer>
                                </Border>
                                
                                <!-- Zone de suggestion contextuelle -->
                                <Border x:Name="SuggestionBanner" 
                                        Grid.Row="1"
                                        Visibility="Collapsed"
                                        Background="#E3F2FD"
                                        BorderBrush="#90CAF9"
                                        BorderThickness="2"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Titre + fermer -->
                                        <Grid Grid.Row="0">
                                            <TextBlock x:Name="SuggestionTitle" 
                                                       Text="💡 Suggestion détectée"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"
                                                       Foreground="#1976D2"/>
                                            <Button x:Name="CloseSuggestionBtn"
                                                    Content="✕"
                                                    Width="24"
                                                    Height="24"
                                                    HorizontalAlignment="Right"
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Background="Transparent"
                                                    Foreground="#666666"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                        
                                        <!-- Explication -->
                                        <TextBlock Grid.Row="1" 
                                                   x:Name="SuggestionExplanation"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Foreground="#424242"
                                                   Margin="0,8,0,8"/>
                                        
                                        <!-- Boutons action -->
                                        <StackPanel Grid.Row="2" 
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <Button x:Name="ChooseTemplateBtn" 
                                                    Content="📝 Choisir modèle"
                                                    Height="32"
                                                    Padding="12,0"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Background="#3498DB"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Margin="0,0,6,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2980B9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <Button x:Name="IgnoreSuggestionBtn" 
                                                    Content="✗ Ignorer"
                                                    Height="32"
                                                    Padding="12,0"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Background="#95A5A6"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#7F8C8D"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="6">
                                        <TextBox x:Name="ChatInput" 
                                                 Height="60"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"
                                                 FontSize="13"
                                                 Padding="10"
                                                 BorderThickness="0"/>
                                    </Border>
                                    
                                    <Button x:Name="ChatSendBtn" 
                                            Grid.Column="2"
                                            Content="Envoyer"
                                            Height="60"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Background="#E67E22"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#D35400"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#BDC3C7"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                                
                                <!-- Section Échanges sauvegardés -->
                                <StackPanel Grid.Row="3" Margin="0,15,0,0">
                                    <TextBlock Text="📚 Échanges sauvegardés" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>
                                    
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" MaxHeight="150">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ListBox x:Name="SavedExchangesList"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="8"/>
                                                        <Setter Property="Margin" Value="2"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border x:Name="Border" 
                                                                            Background="{TemplateBinding Background}" 
                                                                            Padding="{TemplateBinding Padding}"
                                                                            BorderBrush="#E0E0E0"
                                                                            BorderThickness="1"
                                                                            CornerRadius="6">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsSelected" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#90CAF9"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding DisplayLabel}" FontSize="11" FontWeight="SemiBold" Foreground="#3498DB" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </ScrollViewer>
                                    </Border>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <Button x:Name="ViewSavedExchangeBtn" 
                                                Content="👁️ Consulter" 
                                                Height="35"
                                                Padding="15,0"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Background="#3498DB"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Margin="0,0,8,0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2980B9"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                        <Button x:Name="LetterFromChatBtn" 
                                Content="📝 Courrier" 
                                Height="35"
                                Padding="15,0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,8,0"
                                Click="LetterFromChatBtn_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#229954"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <Button x:Name="DeleteSavedExchangeBtn" 
                                                Content="🗑️ Effacer" 
                                                Height="35"
                                                Padding="15,0"
                                                FontSize="12"
                                                FontWeight="SemiBold"
