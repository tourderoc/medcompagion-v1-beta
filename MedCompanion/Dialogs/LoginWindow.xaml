<Window x:Class="MedCompanion.Dialogs.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MedCompanion - Connexion"
        Height="650" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style pour les boutons du clavier PIN -->
        <Style x:Key="PinButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les indicateurs PIN -->
        <Style x:Key="PinDotStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Stroke" Value="#0078D4"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Fill" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- En-tête -->
            <Border Grid.Row="0" Background="#0078D4" CornerRadius="15,15,0,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="MedCompanion"
                               FontSize="28" FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="SubtitleText"
                               Text="Entrez votre code PIN"
                               FontSize="14"
                               Foreground="#B0D4F1"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Contenu -->
            <Grid Grid.Row="1" Margin="20">
                <!-- Mode PIN (par défaut) -->
                <StackPanel x:Name="PinPanel" VerticalAlignment="Center">
                    <!-- Indicateurs PIN (4 points) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <Ellipse x:Name="PinDot1" Style="{StaticResource PinDotStyle}"/>
                        <Ellipse x:Name="PinDot2" Style="{StaticResource PinDotStyle}"/>
                        <Ellipse x:Name="PinDot3" Style="{StaticResource PinDotStyle}"/>
                        <Ellipse x:Name="PinDot4" Style="{StaticResource PinDotStyle}"/>
                    </StackPanel>

                    <!-- Message d'erreur -->
                    <TextBlock x:Name="PinErrorText"
                               Text=""
                               Foreground="#D32F2F"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <!-- Clavier numérique -->
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ligne 1 -->
                        <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>

                        <!-- Ligne 2 -->
                        <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>

                        <!-- Ligne 3 -->
                        <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>

                        <!-- Ligne 4 -->
                        <Button Grid.Row="3" Grid.Column="0" Content="C" Style="{StaticResource PinButtonStyle}" Click="ClearPin_Click"
                                Background="#FFEBEE" Foreground="#D32F2F"/>
                        <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource PinButtonStyle}" Click="PinButton_Click"/>
                        <Button Grid.Row="3" Grid.Column="2" Content="&#x232B;" Style="{StaticResource PinButtonStyle}" Click="DeletePin_Click"
                                FontSize="24"/>
                    </Grid>

                    <!-- Lien vers mot de passe -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Hyperlink x:Name="UsePasswordLink" Click="UsePassword_Click" Foreground="#0078D4">
                            Utiliser le mot de passe
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- Mode Mot de passe -->
                <StackPanel x:Name="PasswordPanel" VerticalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="Mot de passe" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="16"
                                 Padding="12"
                                 Height="45"
                                 KeyDown="PasswordBox_KeyDown"/>

                    <!-- Message d'erreur -->
                    <TextBlock x:Name="PasswordErrorText"
                               Text=""
                               Foreground="#D32F2F"
                               FontSize="12"
                               Margin="0,8,0,0"/>

                    <Button x:Name="LoginButton"
                            Content="Se connecter"
                            Height="45"
                            FontSize="16"
                            Margin="0,20,0,0"
                            Background="#0078D4"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#006CBD"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Lien vers PIN -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Hyperlink x:Name="UsePinLink" Click="UsePin_Click" Foreground="#0078D4">
                            Utiliser le code PIN
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
