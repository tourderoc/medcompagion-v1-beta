<Window x:Class="MedCompanion.Dialogs.MCCLibraryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“š BibliothÃ¨que MCC" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Convertisseur Boolean to Visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Style pour les cartes MCC -->
        <Style x:Key="MCCCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les badges de type -->
        <Style x:Key="TypeBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- HEADER -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="BibliothÃ¨que MCC" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="(ModÃ¨les Cliniques Contextuels)" FontSize="12" Foreground="Gray" 
                       VerticalAlignment="Center" Margin="10,5,0,0"/>
        </StackPanel>
        
        <!-- COLONNE GAUCHE : Liste des MCC -->
        <Border Grid.Row="1" Grid.Column="0" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Barre de recherche -->
                <TextBox Grid.Row="0"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"
                         Padding="10,8"
                         FontSize="13"
                         Background="White"
                         BorderBrush="#DDD"
                         BorderThickness="1"
                         Margin="0,0,0,10">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Rechercher par nom ou mots-clÃ©s..."
                                                               Foreground="#999"
                                                               Margin="10,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- Compteur -->
                <TextBlock Grid.Row="1"
                           Text="{Binding CounterText}"
                           FontSize="12"
                           Foreground="Gray"
                           Margin="0,0,0,10"/>
                
                <!-- Liste des MCC -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding FilteredMCCs}"
                             SelectedItem="{Binding SelectedMCCItem}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource MCCCardStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Nom du MCC -->
                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,8"/>
                                        
                                        <!-- Badge Type + Audience -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                            <Border Style="{StaticResource TypeBadgeStyle}" 
                                                    Background="#3498DB">
                                                <TextBlock Text="{Binding Semantic.DocType}" 
                                                           Foreground="White" 
                                                           FontSize="10"/>
                                            </Border>
                                            <Border Style="{StaticResource TypeBadgeStyle}" 
                                                    Background="#9B59B6" 
                                                    Margin="5,0,0,0">
                                                <TextBlock Text="{Binding Semantic.Audience}" 
                                                           Foreground="White" 
                                                           FontSize="10"/>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- Stats -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“… " FontSize="11" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CreatedDisplay}" 
                                                       FontSize="11" 
                                                       Foreground="Gray"/>
                                            <TextBlock Text=" â€¢ ðŸ”„ " FontSize="11" Foreground="Gray" Margin="8,0,0,0"/>
                                            <TextBlock FontSize="11" Foreground="Gray">
                                                <Run Text="{Binding UsageCount}"/>
                                                <Run Text=" utilisations"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <!-- ðŸ†• Note d'Ã©valuation -->
                                        <TextBlock Grid.Row="3" 
                                                   Text="{Binding RatingDisplay}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{Binding RatingColor}"
                                                   Margin="0,5,0,0"/>
                                        
                                        <!-- Mots-clÃ©s (3 premiers) -->
                                        <TextBlock Grid.Row="4"
                                                   FontSize="10" 
                                                   Foreground="#666"
                                                   TextWrapping="Wrap"
                                                   Margin="0,8,0,0">
                                            <Run Text="ðŸ”‘ "/>
                                            <Run Text="{Binding KeywordsPreview}"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                
                <!-- Actions bas de liste -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Command="{Binding RefreshCommand}"
                            Content="ðŸ”„ Actualiser"
                            Padding="10,5"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- COLONNE CENTRALE : AperÃ§u du MCC -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- En-tÃªte -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding PreviewTitle}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding PreviewSubtitle}"
                                   FontSize="12"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding UsageStats}"
                                   FontSize="11"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding DateStats}"
                                   FontSize="11"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- AperÃ§u Template -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding TemplatePreview}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             Background="Transparent"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="10"/>
                </ScrollViewer>

                <!-- Variables dÃ©tectÃ©es -->
                <Border Grid.Row="2"
                        Background="#F8F9FA"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ”¤ Variables dÃ©tectÃ©es :"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding VariablesText}"
                                   FontSize="11"
                                   Foreground="#666"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- COLONNE DROITE : Analyse SÃ©mantique -->
        <Border Grid.Row="1" Grid.Column="2" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="1" CornerRadius="8" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Analyse SÃ©mantique" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>
                    
                    <!-- ðŸ†• Section Ã‰valuations -->
                    <StackPanel Visibility="{Binding ShowRatingSection, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,15">
                        <TextBlock Text="â­ Ã‰valuations"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <!-- Ã‰toiles + Note moyenne -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding RatingStarsText}"
                                       FontSize="16"
                                       Foreground="#FFD700"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding RatingAverageText}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Nombre d'Ã©valuations -->
                        <TextBlock Text="{Binding RatingCountText}"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,0,0,5"/>

                        <!-- Taux de satisfaction -->
                        <TextBlock Text="{Binding RatingSatisfactionText}"
                                   FontSize="11"
                                   Foreground="#27AE60"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>

                        <!-- Distribution -->
                        <TextBlock Text="{Binding RatingDistributionText}"
                                   FontSize="10"
                                   Foreground="#666"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"/>

                        <Separator Margin="0,15,0,0" Background="#E0E0E0"/>
                    </StackPanel>
                    
                    <!-- Type de document -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="ðŸ·ï¸ Type de document"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SemanticType}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Audience -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="ðŸ‘¥ Audience cible"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SemanticAudience}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Tranche d'Ã¢ge -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="ðŸ‘¶ Tranche d'Ã¢ge"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SemanticAge}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Ton -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="ðŸŽµ TonalitÃ©"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SemanticTone}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <Separator Margin="0,10,0,15" Background="#E0E0E0"/>
                    
                    <!-- Mots-clÃ©s cliniques -->
                    <TextBlock Text="ðŸ”‘ Mots-clÃ©s cliniques"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding ClinicalKeywords}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E3F2FD"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Margin="0,0,5,5"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding}"
                                               FontSize="11"
                                               Foreground="#1976D2"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <Separator Margin="0,15,0,15" Background="#E0E0E0"/>

                    <!-- Structure -->
                    <TextBlock Text="ðŸ“ Structure dÃ©tectÃ©e"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding StructureSections}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,5">
                                    <TextBlock FontSize="11">
                                        <Run Text="â€¢" Foreground="#3498DB"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Key, Mode=OneWay}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Value, Mode=OneWay}"
                                               FontSize="10"
                                               Foreground="Gray"
                                               Margin="15,2,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- FOOTER : Boutons d'action -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Boutons gauche -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding EditCommand}"
                            Content="âœï¸ Ã‰diter"
                            Padding="15,8"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    <Button Command="{Binding OptimizeCommand}"
                            Content="ðŸ§  Optimiser le MCC"
                            Padding="15,8"
                            Background="#9B59B6"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    <!-- Bouton Ajouter Ã  la liste Courriers -->
                    <Button Command="{Binding AddToCourriersCommand}"
                            Content="âž• Ajouter Ã  Courriers"
                            Padding="15,8"
                            Background="#16A085"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    <!-- Bouton Retirer de la liste Courriers -->
                    <Button Command="{Binding RemoveFromCourriersCommand}"
                            Visibility="{Binding ShowRemoveFromCourriers, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Content="âž– Retirer de Courriers"
                            Padding="15,8"
                            Background="#E67E22"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    <Button Command="{Binding DeleteCommand}"
                            Content="ðŸ—‘ï¸ Supprimer"
                            Padding="15,8"
                            Background="#E74C3C"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Boutons droite -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding GenerateCommand}"
                            Content="âœ¨ GÃ©nÃ©rer avec ce MCC"
                            Padding="15,8"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    <Button Content="Fermer"
                            Padding="15,8"
                            Background="White"
                            Foreground="#333"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            FontSize="13"
                            Cursor="Hand"
                            IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
