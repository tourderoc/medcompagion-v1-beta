<Window x:Class="MedCompanion.Dialogs.MCCSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SÃ©lection du meilleur MCC"
        Width="900"
        Height="650"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Style pour les cartes MCC -->
        <Style x:Key="MCCCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le badge de score -->
        <Style x:Key="ScoreBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸŽ¯ ModÃ¨les MCC trouvÃ©s"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock x:Name="SubtitleText"
                          Text="SÃ©lectionnez le modÃ¨le le plus appropriÃ© pour votre courrier"
                          FontSize="13"
                          Foreground="White"
                          Opacity="0.9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Liste des MCCs -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel x:Name="MCCCardsPanel">
                <!-- Les cartes MCC seront ajoutÃ©es dynamiquement ici -->
            </StackPanel>
        </ScrollViewer>

        <!-- Pied de page avec boutons -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="AnalysisInfoText"
                              Text="Analyse de la demande en cours..."
                              FontSize="12"
                              Foreground="#666"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="âŒ Annuler"
                        Padding="20,10"
                        FontSize="13"
                        Background="#E0E0E0"
                        Foreground="#333"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Cancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
