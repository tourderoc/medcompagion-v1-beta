<Window x:Class="MedCompanion.Dialogs.CustomAttestationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer une attestation personnalisée"
        Width="500" Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre et instructions -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Décrivez l'attestation souhaitée :"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Exemples : &quot;attestation pour piscine&quot;, &quot;aptitude sport collectif&quot;, &quot;certificat médical danse&quot;"
                       FontSize="11"
                       FontStyle="Italic"
                       Foreground="#7F8C8D"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Champ de saisie -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,20">
            <TextBox x:Name="ConsigneTextBox"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"
                     FontSize="12"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="#2C3E50"/>
        </Border>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Annuler"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#ECF0F1"
                    Foreground="#2C3E50"
                    BorderThickness="0"
                    FontSize="12"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D5DBDB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Générer"
                    Width="100"
                    Height="35"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="GenerateButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
