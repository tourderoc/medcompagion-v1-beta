                                <ComboBox x:Name="LengthComboBox" Padding="8" IsEditable="True" Text="Moyen (standard)">
                                    <ComboBoxItem Content="1 ligne"/>
                                    <ComboBoxItem Content="2 lignes"/>
                                    <ComboBoxItem Content="3 lignes"/>
                                    <ComboBoxItem Content="4 lignes"/>
                                    <ComboBoxItem Content="5 lignes"/>
                                    <ComboBoxItem Content="10 lignes"/>
                                    <ComboBoxItem Content="Court (quelques lignes)"/>
                                    <ComboBoxItem Content="Moyen (standard)"/>
                                    <ComboBoxItem Content="DÃ©taillÃ©"/>
