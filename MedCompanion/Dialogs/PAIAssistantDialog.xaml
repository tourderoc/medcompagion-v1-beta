                            </Border>

                            <!-- Bloc Nom -->
                            <Border Grid.Column="1" Background="#7D3C98" Padding="10,8" CornerRadius="4" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Nom" Foreground="White" FontSize="11" Opacity="0.8" Margin="0,0,0,3"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="PatientNomText"
                                                   Text="..."
                                                   Foreground="White"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button x:Name="CopyNomButton"
                                                Content="ðŸ“‹"
                                                Padding="6,3"
                                                FontSize="12"
                                                Background="#5B2C6F"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Copier le nom"
                                                Click="CopyNomButton_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Bloc Date de naissance -->
                            <Border Grid.Column="2" Background="#7D3C98" Padding="10,8" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="Date de naissance" Foreground="White" FontSize="11" Opacity="0.8" Margin="0,0,0,3"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="PatientDobText"
                                                   Text="..."
                                                   Foreground="White"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button x:Name="CopyDobButton"
                                                Content="ðŸ“‹"
                                                Padding="6,3"
                                                FontSize="12"
                                                Background="#5B2C6F"
                                                Foreground="White"
