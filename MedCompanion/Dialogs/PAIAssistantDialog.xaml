                                Height="40"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#8E44AD"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,20"
                                Click="GenerateButton_Click">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Separator Background="#DDD" Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="RÃ©ponse gÃ©nÃ©rÃ©e" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button x:Name="CopyResponseButton"
                                    Grid.Column="1"
                                    Content="ðŸ“‹ Copier la rÃ©ponse"
                                    Padding="10,5"
                                    Background="#27AE60"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    IsEnabled="False"
                                    Click="CopyResponseButton_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                        <TextBox x:Name="ResponseTextBox"
                                 Height="300"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#BDC3C7"
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="False">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <TextBlock x:Name="StatusText" 
                                   Text="" 
                                   Margin="0,10,0,0" 
                                   Foreground="#27AE60" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"/>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- ========== GRIDSPLITTER ========== -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#BDC3C7"
                      ShowsPreview="False"
                      Cursor="SizeWE"/>

        <!-- ========== COLONNE DROITE : PDF VIEWER ========== -->
        <Border Grid.Column="2" Background="White">
            <DockPanel>
                <!-- Toolbar PDF -->
                <Border DockPanel.Dock="Top" Background="#34495E" Padding="10,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“„ Formulaire PAI"
