<Window x:Class="MedCompanion.Dialogs.TemplateLibraryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“š BibliothÃ¨que de ModÃ¨les" 
        Width="750" Height="550"
        WindowStartupLocation="CenterOwner"
        Background="#F5F6FA"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“š BibliothÃ¨que de ModÃ¨les" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"/>
            <TextBlock Text="SÃ©lectionnez un modÃ¨le pour crÃ©er un nouveau formulaire ou gÃ©rez vos modÃ¨les" 
                       FontSize="12" 
                       Foreground="#7F8C8D" 
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Template List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <Border Grid.Row="0" 
                            Background="#F8F9FA" 
                            Padding="15,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="ModÃ¨les disponibles" 
                                       FontWeight="SemiBold" 
                                       FontSize="13"
                                       Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="TemplateCountText"
                                       Text="0 modÃ¨le(s)" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"/>
                        </Grid>
                    </Border>
                    
                    <!-- List Content -->
                    <ListBox Grid.Row="1" 
                             x:Name="TemplateListBox" 
                             SelectionMode="Single"
                             BorderThickness="0"
                             Padding="5"
                             SelectionChanged="TemplateListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                        Padding="10" 
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Icon -->
                                        <TextBlock Grid.Column="0" 
                                                   Text="ðŸ“„" 
                                                   FontSize="24" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,15,0"/>
                                        
                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="13"
                                                       Foreground="#2C3E50"/>
                                            <TextBlock Text="{Binding DateCreatedFormatted}" 
                                                       FontSize="11" 
                                                       Foreground="#7F8C8D" 
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" 
                                x:Name="EmptyStatePanel"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Aucun modÃ¨le disponible" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#7F8C8D" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Importez un formulaire et sauvegardez-le comme modÃ¨le" 
                                   FontSize="11" 
                                   Foreground="#95A5A6" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Action Panel -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Actions" 
                               FontWeight="SemiBold" 
                               FontSize="13" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    
                    <!-- Selected Template Info -->
                    <Border x:Name="SelectedInfoPanel"
                            Background="#F8F9FA" 
                            CornerRadius="6" 
                            Padding="12"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="ModÃ¨le sÃ©lectionnÃ©:" 
                                       FontSize="10" 
                                       Foreground="#7F8C8D" 
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="SelectedTemplateNameText"
                                       Text="" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Use Button -->
                    <Button x:Name="UseButton"
                            Content="âœ… Utiliser ce modÃ¨le" 
                            Click="UseButton_Click"
                            Background="#27AE60"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Delete Button -->
                    <Button x:Name="DeleteButton"
                            Content="ðŸ—‘ï¸ Supprimer" 
                            Click="DeleteButton_Click"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Separator Margin="0,10,0,10"/>
                    
                    <!-- Cancel Button -->
                    <Button x:Name="CancelButton"
                            Content="âŒ Annuler" 
                            Click="CancelButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                <Setter Property="Background" Value="#95A5A6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
