<Window x:Class="MedCompanion.Dialogs.OrdonnanceBiologieDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ§ª Ordonnance de Biologie"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F6FA"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte patient -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="ðŸ‘¤ Informations patient" Style="{StaticResource SectionHeader}"/>
                <TextBlock x:Name="PatientInfoTextBlock"
                          FontSize="12"
                          Foreground="#7F8C8D"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- SÃ©lection du preset -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="ðŸ“‹ Choisir un modÃ¨le de bilan" Style="{StaticResource SectionHeader}"/>
                <ComboBox x:Name="PresetComboBox"
                         Height="35"
                         FontSize="12"
                         SelectionChanged="PresetComboBox_SelectionChanged">
                    <ComboBoxItem Content="ðŸ”¬ Bilan standard pÃ©diatrique" Tag="standard"/>
                    <ComboBoxItem Content="ðŸ©º Bilan biologique â€“ sans jeÃ»ne (enfants)" Tag="sansjeune"/>
                    <ComboBoxItem Content="ðŸ¦‹ Bilan thyroÃ¯dien" Tag="thyroidien"/>
                </ComboBox>

                <TextBlock x:Name="PresetDescriptionTextBlock"
                          FontSize="11"
                          Foreground="#95A5A6"
                          TextWrapping="Wrap"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Liste des examens (cases Ã  cocher) -->
        <Border Grid.Row="4" Background="White" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="âœ“ Examens Ã  prescrire" Style="{StaticResource SectionHeader}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ExamensPanel" Margin="5"/>
                </ScrollViewer>

                <!-- Note automatique -->
                <Border Grid.Row="2"
                       x:Name="NoteBorder"
                       Background="#FFF9E6"
                       BorderBrush="#F39C12"
                       BorderThickness="1"
                       CornerRadius="6"
                       Padding="12"
                       Margin="0,10,0,0"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Note sur l'ordonnance :" FontSize="11" FontWeight="SemiBold" Foreground="#D68910" Margin="0,0,0,5"/>
                        <TextBlock x:Name="NoteTextBlock"
                                  FontSize="11"
                                  Foreground="#7D6608"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="âŒ Annuler"
                   Height="40"
                   Padding="20,0"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0"
                   Click="AnnulerButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="âœ… GÃ©nÃ©rer l'ordonnance"
                   Height="40"
                   Padding="20,0"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Background="#27AE60"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="ValiderButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
