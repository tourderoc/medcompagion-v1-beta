<Window x:Class="MedCompanion.Dialogs.CreatePatientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un nouveau patient" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    
    <Border Padding="30" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Nouveau patient" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Remplissez les informations du patient" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Form -->
            <StackPanel Grid.Row="1">
                <!-- Prénom -->
                <TextBlock Text="Prénom *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>
                <TextBox x:Name="PrenomTextBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,20"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"/>
                
                <!-- Nom -->
                <TextBlock Text="Nom *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>
                <TextBox x:Name="NomTextBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,20"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"/>
                
                <!-- Date de naissance -->
                <TextBlock Text="Date de naissance (optionnel)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>
                <TextBox x:Name="DobTextBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,5"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"/>
                <TextBlock Text="Format: JJ/MM/AAAA ou AAAA-MM-JJ" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,20"/>
                
                <!-- Sexe -->
                <TextBlock Text="Sexe (optionnel)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="SexeHRadio" Content="Homme" GroupName="Sexe" FontSize="14" Margin="0,0,20,0"/>
                    <RadioButton x:Name="SexeFRadio" Content="Femme" GroupName="Sexe" FontSize="14"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="CancelButton" 
                        Grid.Column="0"
                        Content="Annuler" 
                        Height="45"
                        FontSize="14"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="CreateButton" 
                        Grid.Column="2"
                        Content="Créer" 
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CreateButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
