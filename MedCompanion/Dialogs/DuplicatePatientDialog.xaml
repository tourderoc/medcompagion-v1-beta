<Window x:Class="MedCompanion.Dialogs.DuplicatePatientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="‚ö†Ô∏è Patient similaire d√©tect√©"
        Width="550"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-t√™te -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#E67E22">
                ‚ö†Ô∏è Patient similaire d√©tect√©
            </TextBlock>
            <TextBlock Margin="0,5,0,0" Foreground="#555" TextWrapping="Wrap">
                Un patient avec des informations similaires existe d√©j√† dans la base de donn√©es.
            </TextBlock>
        </StackPanel>

        <!-- Comparaison -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Patient existant -->
                    <StackPanel Grid.Column="0">
                        <TextBlock FontWeight="Bold" FontSize="14" Foreground="#27AE60" Margin="0,0,0,10">
                            ‚úÖ Patient existant
                        </TextBlock>

                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">Nom complet :</TextBlock>
                        <TextBlock x:Name="ExistingNameText"
                                   Text="{Binding ExistingPatientName}"
                                   Foreground="#333"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">Date de naissance :</TextBlock>
                        <TextBlock x:Name="ExistingDobText"
                                   Text="{Binding ExistingPatientDob}"
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>

                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">Dossier :</TextBlock>
                        <TextBlock x:Name="ExistingIdText"
                                   Text="{Binding ExistingPatientId}"
                                   Foreground="#666"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- S√©parateur -->
                    <Border Grid.Column="1" Background="#DDD" Width="1" Margin="0,10"/>

                    <!-- Nouveau patient -->
                    <StackPanel Grid.Column="2">
                        <TextBlock FontWeight="Bold" FontSize="14" Foreground="#E74C3C" Margin="0,0,0,10">
                            ‚ö†Ô∏è Nouveau patient
                        </TextBlock>

                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">Nom complet :</TextBlock>
                        <TextBlock x:Name="NewNameText"
                                   Text="{Binding NewPatientName}"
                                   Foreground="#333"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">Date de naissance :</TextBlock>
                        <TextBlock x:Name="NewDobText"
                                   Text="{Binding NewPatientDob}"
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>

                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">Dossier (si cr√©√©) :</TextBlock>
                        <TextBlock x:Name="NewIdText"
                                   Text="{Binding NewPatientId}"
                                   Foreground="#666"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Message d'aide -->
        <TextBlock Grid.Row="2"
                   Margin="0,15,0,15"
                   Foreground="#555"
                   TextWrapping="Wrap"
                   FontSize="12">
            üí° Si c'est le m√™me patient, cliquez sur "Utiliser l'existant". Sinon, cliquez sur "Cr√©er quand m√™me".
        </TextBlock>

        <!-- Boutons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="UseExistingButton"
                    Content="‚úÖ Utiliser l'existant"
                    Width="160"
                    Height="40"
                    Margin="5"
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="UseExistingButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CreateAnywayButton"
                    Content="‚ö†Ô∏è Cr√©er quand m√™me"
                    Width="160"
                    Height="40"
                    Margin="5"
                    Background="#E67E22"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CreateAnywayButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D35400"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CancelButton"
                    Content="‚ùå Annuler"
                    Width="120"
                    Height="40"
                    Margin="5"
                    Background="#95A5A6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
