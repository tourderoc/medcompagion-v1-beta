<Window x:Class="MedCompanion.Dialogs.PAIMotifDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renseigner le motif du PAI"
        Height="280"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Titre -->
            <TextBlock Grid.Row="0"
                      Text="ðŸ“‹ Quel est le motif de ce PAI ?"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#2C3E50"/>
            
            <!-- Instructions -->
            <TextBlock Grid.Row="2"
                      Text="SÃ©lectionnez le motif principal de ce Projet d'Accueil IndividualisÃ© :"
                      FontSize="12"
                      Foreground="#7F8C8D"
                      TextWrapping="Wrap"/>
            
            <!-- Options -->
            <StackPanel Grid.Row="4">
                <RadioButton x:Name="MedicamentRadio"
                            Content="ðŸ’Š Administration de mÃ©dicament Ã  l'Ã©cole"
                            FontSize="13"
                            Margin="0,0,0,12"
                            IsChecked="True"
                            GroupName="MotifPAI"/>
                
                <RadioButton x:Name="AmenagementRadio"
                            Content="ðŸ“š AmÃ©nagement scolaire"
                            FontSize="13"
                            Margin="0,0,0,12"
                            GroupName="MotifPAI"/>
                
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="AutreRadio"
                                Content="âœï¸ Autre : "
                                FontSize="13"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                GroupName="MotifPAI"/>
                    
                    <TextBox x:Name="AutreTextBox"
                            Width="280"
                            Height="30"
                            FontSize="12"
                            VerticalContentAlignment="Center"
                            Padding="8,0"
                            GotFocus="AutreTextBox_GotFocus"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Boutons -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler"
                       Width="100"
                       Height="35"
                       Margin="0,0,10,0"
                       FontSize="13"
                       Background="#95A5A6"
                       Foreground="White"
                       BorderThickness="0"
                       Click="AnnulerButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Valider"
                       Width="100"
                       Height="35"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Background="#27AE60"
                       Foreground="White"
                       BorderThickness="0"
                       Click="ValiderButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
