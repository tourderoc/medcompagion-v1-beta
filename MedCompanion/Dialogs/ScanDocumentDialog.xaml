<Window x:Class="MedCompanion.Dialogs.ScanDocumentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scanner un document"
        Height="450"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="ðŸ“· Scan en cours..."
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="#2C3E50"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusText"
                      Text="CZUR Lens lancÃ© - En attente du scan..."
                      FontSize="13"
                      Foreground="#7F8C8D"
                      TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"/>
        </StackPanel>

        <!-- Zone centrale -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="20"
                BorderBrush="#E8E8E8"
                BorderThickness="1">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ðŸ“‹ Instructions :"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#2C3E50"
                          Margin="0,0,0,15"/>

                <TextBlock TextWrapping="Wrap"
                          FontSize="12"
                          Foreground="#555"
                          LineHeight="20">
                    <Run Text="1."/>
                    <Run Text="Scannez votre document dans CZUR Lens" FontWeight="SemiBold"/>
                    <LineBreak/>
                    <Run Text="2."/>
                    <Run Text="Exportez en PDF" FontWeight="SemiBold"/>
                    <LineBreak/>
                    <Run Text="3."/>
                    <Run Text="Le document sera automatiquement importÃ© !" FontWeight="SemiBold" Foreground="#27AE60"/>
                </TextBlock>

                <Border Margin="0,15,0,0"
                        Padding="10"
                        Background="#E8F5E9"
                        CornerRadius="4"
                        BorderBrush="#27AE60"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ” Dossier surveillÃ© :" FontSize="11" Foreground="#666" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MonitoringFolderTextBox"
                                    Grid.Column="0"
                                    FontSize="10"
                                    Padding="5"
                                    VerticalContentAlignment="Center"
                                    BorderBrush="#CCC"
                                    BorderThickness="1"/>
                            <Button Grid.Column="1"
                                   Content="âœ“"
                                   Click="UpdateFolderButton_Click"
                                   Width="30"
                                   Height="25"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Background="#27AE60"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Margin="5,0,0,0"
                                   ToolTip="Appliquer">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           CornerRadius="4"
                                                           Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#229954"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Bouton Annuler -->
        <Button Grid.Row="4"
               Content="Annuler"
               Click="CancelButton_Click"
               Height="40"
               Padding="30,0"
               FontSize="13"
               Background="#95A5A6"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               HorizontalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="6"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#7F8C8D"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
