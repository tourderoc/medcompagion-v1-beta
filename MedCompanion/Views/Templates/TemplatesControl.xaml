<UserControl x:Class="MedCompanion.Views.Templates.TemplatesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
        <StackPanel>
            <!-- Section Apprentissage -->
            <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“š Apprendre nouveau modÃ¨le" FontSize="14" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10"/>

                    <TextBlock Text="Collez un exemple de courrier ci-dessous :" FontSize="12" Foreground="#424242" Margin="0,0,0,5"/>

                    <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="6" Margin="0,0,0,10">
                        <TextBox Text="{Binding ExampleLetterText, UpdateSourceTrigger=PropertyChanged}"
                                 Height="150"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="12"
                                 Padding="10"
                                 BorderThickness="0"/>
                    </Border>

                    <Button Command="{Binding AnalyzeLetterCommand}"
                            Content="ðŸ” Analyser avec l'IA"
                            Height="40"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,15">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Zone rÃ©sultat analyse EN 2 COLONNES -->
                    <Border Visibility="{Binding ShowResultPanel, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="White"
                            BorderBrush="#4CAF50"
                            BorderThickness="2"
                            CornerRadius="6"
                            Padding="15"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- En-tÃªte -->
                            <TextBlock Grid.Row="0" Text="ðŸ“Š RÃ‰SULTAT DE L'ANALYSE" FontSize="14" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10"/>

                            <!-- Nom du template -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                <TextBlock Text="Nom suggÃ©rÃ© :" FontSize="11" Foreground="#666666" Margin="0,0,0,3"/>
                                <TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}"
                                         Height="30"
                                         FontSize="12"
                                         Padding="8"/>
                            </StackPanel>

                            <!-- COLONNES : Template + Analyse -->
                            <Grid Grid.Row="2" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- COLONNE GAUCHE : Template extrait -->
                                <Border Grid.Column="0"
                                        Background="#F8F9FA"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                  Text="ðŸ“„ TEMPLATE EXTRAIT"
                                                  FontSize="12"
                                                  FontWeight="Bold"
                                                  Foreground="#2C3E50"/>

                                        <TextBlock Grid.Row="2"
                                                  Text="Variables dÃ©tectÃ©es :"
                                                  FontSize="10"
                                                  Foreground="#666666"/>

                                        <Border Grid.Row="4"
                                                Background="White"
                                                BorderBrush="#BDC3C7"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="60"/>
                                                    <RowDefinition Height="2"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Variables -->
                                                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                                                    <TextBox Text="{Binding DetectedVariables, Mode=OneWay}"
                                                            AcceptsReturn="True"
                                                            TextWrapping="Wrap"
                                                            IsReadOnly="True"
                                                            FontSize="10"
                                                            FontFamily="Consolas"
                                                            BorderThickness="0"
                                                            Padding="6"
                                                            Background="Transparent"/>
                                                </ScrollViewer>

                                                <Separator Grid.Row="1" Background="#E0E0E0"/>

                                                <!-- Template -->
                                                <ScrollViewer Grid.Row="2"
                                                             VerticalScrollBarVisibility="Auto"
                                                             HorizontalScrollBarVisibility="Disabled">
                                                    <TextBox Text="{Binding ExtractedTemplate, Mode=OneWay}"
                                                            AcceptsReturn="True"
                                                            TextWrapping="Wrap"
                                                            IsReadOnly="True"
                                                            FontSize="11"
                                                            FontFamily="Consolas"
                                                            BorderThickness="0"
                                                            Padding="6"
                                                            Background="Transparent"
                                                            VerticalScrollBarVisibility="Disabled"
                                                            HorizontalScrollBarVisibility="Disabled"/>
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- COLONNE DROITE : Analyse sÃ©mantique -->
                                <Border Grid.Column="2"
                                        Background="#E8F5E9"
                                        BorderBrush="#4CAF50"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ” ANALYSE SÃ‰MANTIQUE"
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Foreground="#2E7D32"
                                                      Margin="0,0,0,15"/>

                                            <!-- MÃ©tadonnÃ©es -->
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                          Text="Type :"
                                                          FontWeight="SemiBold"
                                                          FontSize="11"
                                                          Margin="0,0,10,8"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                          Text="{Binding SemanticType}"
                                                          FontSize="11"
                                                          Margin="0,0,0,8"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                                          Text="Public :"
                                                          FontWeight="SemiBold"
                                                          FontSize="11"
                                                          Margin="0,0,10,8"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                          Text="{Binding SemanticAudience}"
                                                          FontSize="11"
                                                          Margin="0,0,0,8"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0"
                                                          Text="Ã‚ge :"
                                                          FontWeight="SemiBold"
                                                          FontSize="11"
                                                          Margin="0,0,10,8"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1"
                                                          Text="{Binding SemanticAgeGroup}"
                                                          FontSize="11"
                                                          Margin="0,0,0,8"/>

                                                <TextBlock Grid.Row="3" Grid.Column="0"
                                                          Text="Ton :"
                                                          FontWeight="SemiBold"
                                                          FontSize="11"
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1"
                                                          Text="{Binding SemanticTone}"
                                                          FontSize="11"/>
                                            </Grid>

                                            <!-- Mots-clÃ©s cliniques -->
                                            <TextBlock Text="ðŸ·ï¸ Mots-clÃ©s cliniques"
                                                      FontWeight="Bold"
                                                      FontSize="11"
                                                      Margin="0,10,0,8"/>
                                            <ItemsControl ItemsSource="{Binding ClinicalKeywords}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#4CAF50"
                                                                CornerRadius="12"
                                                                Padding="8,4"
                                                                Margin="0,0,5,5">
                                                            <TextBlock Text="{Binding}"
                                                                      Foreground="White"
                                                                      FontSize="10"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>

                                            <!-- Structure dÃ©tectÃ©e -->
                                            <TextBlock Text="ðŸ“ Structure dÃ©tectÃ©e"
                                                      FontWeight="Bold"
                                                      FontSize="11"
                                                      Margin="0,15,0,8"/>
                                            <ItemsControl ItemsSource="{Binding StructureSections}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,3">
                                                            <TextBlock Text="â€¢ " FontWeight="Bold" FontSize="10"/>
                                                            <TextBlock FontSize="10">
                                                                <Run Text="{Binding Key, Mode=OneWay}" FontWeight="SemiBold"/>
                                                                <Run Text=" : "/>
                                                                <Run Text="{Binding Value, Mode=OneWay}"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>

                            <!-- Bouton sauvegarder -->
                            <Button Grid.Row="3"
                                    Command="{Binding SaveTemplateCommand}"
                                    Content="ðŸ’¾ Sauvegarder comme nouveau MCC"
                                    Height="45"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Background="#2E7D32"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1B5E20"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDBDBD"/>
                                                <Setter Property="Cursor" Value="Arrow"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- NOUVEAU : Bouton BibliothÃ¨que MCC -->
            <Button Command="{Binding OpenMCCLibraryCommand}"
                    Content="ðŸ“š Ouvrir la BibliothÃ¨que MCC"
                    Height="50"
                    FontSize="15"
                    FontWeight="Bold"
                    Background="#8E44AD"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,15">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#71368A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>
