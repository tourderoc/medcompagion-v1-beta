<UserControl x:Class="MedCompanion.Views.Courriers.CourriersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:MedCompanion.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
    </UserControl.Resources>

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ComboBox Courrier type -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="ðŸ“ Courrier type" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>

            <CheckBox x:Name="AutoAdaptAIToggle"
                      Grid.Row="1"
                      Content="âš¡ Adapter automatiquement avec l'IA"
                      IsChecked="{Binding AutoAdaptWithAI, Mode=TwoWay}"
                      FontSize="12"
                      Foreground="#34495E"
                      Margin="0,0,0,8"
                      VerticalContentAlignment="Center"/>

            <!-- Bouton CrÃ©er avec IA -->
            <Button x:Name="CreateLetterWithAIButton"
                    Grid.Row="2"
                    Content="âœ¨ CrÃ©er avec l'IA"
                    Height="45"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,8"
                    Command="{Binding CreateWithAICommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <ComboBox x:Name="TemplateLetterCombo"
                      Grid.Row="3"
                      Height="40"
                      FontSize="13"
                      Background="White"
                      BorderBrush="#BDC3C7"
                      BorderThickness="1"
                      ItemsSource="{Binding MCCTemplates}"
                      SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                      IsEnabled="{Binding CanSelectTemplate}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" Padding="5,5,5,5"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <!-- Liste des courriers -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="ðŸ“‹ Courriers sauvegardÃ©s" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#2C3E50"/>

            <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" MaxHeight="200">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="LettersList"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemsSource="{Binding Letters}"
                             SelectedItem="{Binding SelectedLetter, Mode=TwoWay}"
                             MouseDoubleClick="LettersList_MouseDoubleClick">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8"/>
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderBrush="#E0E0E0"
                                                    BorderThickness="1"
                                                    CornerRadius="6">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#90CAF9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding DateLabel}" FontSize="10" FontWeight="SemiBold" Foreground="#3498DB"/>
                                    <TextBlock Text="{Binding Preview}" FontSize="9" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Boutons actions courriers -->
        <StackPanel Grid.Row="3">
            <!-- Boutons Sauvegarder et Annuler sur la mÃªme ligne -->
            <Grid Margin="0,0,0,8" Visibility="{Binding ShowEditButtons, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton Sauvegarder avec barre de progression -->
                <Button x:Name="SauvegarderLetterButton"
                        Grid.Column="0"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="{Binding CanShowSaveButton}"
                        Command="{Binding SaveLetterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <!-- Bordure avec coins arrondis -->
                                            <Border x:Name="ButtonBorder" 
                                                    Background="#27AE60" 
                                                    CornerRadius="6"
                                                    ClipToBounds="True">
                                                <!-- Barre de progression (visible uniquement pendant la gÃ©nÃ©ration) -->
                                                <Grid x:Name="ProgressContainer" Visibility="Collapsed">
                                                    <!-- Fond gris -->
                                                    <Border Background="#BDC3C7" CornerRadius="6"/>
                                                    
                                                    <!-- Barre de progression verte -->
                                                    <Border x:Name="ProgressBar" 
                                                            HorizontalAlignment="Left"
                                                            CornerRadius="6,0,0,6">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="#27AE60" Offset="0"/>
                                                                <GradientStop Color="#2ECC71" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                        <Border.Width>
                                                            <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                                                <Binding Path="GenerationProgress"/>
                                                                <Binding RelativeSource="{RelativeSource AncestorType=Border, AncestorLevel=2}" Path="ActualWidth"/>
                                                            </MultiBinding>
                                                        </Border.Width>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                            
                                            <!-- Texte du bouton -->
                                            <TextBlock x:Name="ButtonText"
                                                      Text="{Binding GenerationStatusText}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Foreground="White"
                                                      FontSize="{TemplateBinding FontSize}"
                                                      FontWeight="{TemplateBinding FontWeight}"/>
                                        </Grid>
                                        
                                        <ControlTemplate.Triggers>
                                            <!-- Afficher la barre de progression pendant la gÃ©nÃ©ration -->
                                            <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                                <Setter TargetName="ProgressContainer" Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            
                                            <!-- Hover effect (seulement si pas en gÃ©nÃ©ration) -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                    <Condition Binding="{Binding IsGenerating}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#229954"/>
                                            </MultiDataTrigger>
                                            
                                            <!-- Disabled state -->
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#BDC3C7"/>
                                                <Setter TargetName="ButtonText" Property="Foreground" Value="#7F8C8D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Bouton Annuler -->
                <Button x:Name="AnnulerLetterButton"
                        Grid.Column="2"
                        Content="âŒ Annuler"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding CancelEditCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Les 4 boutons sur la mÃªme ligne (visibles quand un courrier est sÃ©lectionnÃ©) -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton Noter -->
                <Button x:Name="NoterLetterButton"
                        Grid.Column="0"
                        Content="â­ Noter"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#FFA500"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="{Binding ShowRateButton, Converter={StaticResource BoolToVis}}"
                        Command="{Binding RateLetterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF8C00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Bouton Modifier (mode lecture) -->
                <Button x:Name="ModifierLetterButton"
                        Grid.Column="2"
                        Content="âœï¸ Modifier"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#F39C12"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="{Binding ShowReadOnlyButtons, Converter={StaticResource BoolToVis}}"
                        Command="{Binding ModifyLetterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E67E22"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="SupprimerLetterButton"
                        Grid.Column="4"
                        Content="ðŸ—‘ï¸ Supprimer"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="{Binding ShowReadOnlyButtons, Converter={StaticResource BoolToVis}}"
                        Command="{Binding DeleteLetterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ImprimerLetterButton"
                        Grid.Column="6"
                        Content="ðŸ–¨ï¸ Imprimer"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#8E44AD"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="{Binding ShowReadOnlyButtons, Converter={StaticResource BoolToVis}}"
                        Command="{Binding PrintLetterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#71368A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Zone Ã©dition courrier avec header -->
        <Grid Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header avec bouton Vue DÃ©taillÃ©e -->
            <Grid Grid.Row="0" Margin="0,0,0,4">
                <TextBlock Text="ðŸ“„ AperÃ§u du courrier" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#2C3E50"
                          VerticalAlignment="Center"/>
                
                <!-- Bouton Vue DÃ©taillÃ©e -->
                <Button x:Name="ViewLetterButton"
                        Content="ðŸ‘ï¸"
                        Width="28"
                        Height="28"
                        FontSize="14"
                        Background="#8E44AD"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        ToolTip="Ouvrir en plein Ã©cran (lecture/Ã©dition)"
                        Visibility="{Binding ShowReadOnlyButtons, Converter={StaticResource BoolToVis}}"
                        Command="{Binding ViewLetterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#71368A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="6">
                <RichTextBox x:Name="LetterEditText"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Visible"
                             HorizontalScrollBarVisibility="Disabled"
                             Background="#FAFAFA"
                             FontSize="13"
                             Padding="12"
                             BorderThickness="0"
                             AcceptsTab="False"
                             TextChanged="LetterEditText_TextChanged"
                             MouseDoubleClick="LetterEditText_MouseDoubleClick"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
