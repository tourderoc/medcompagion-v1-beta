<UserControl x:Class="MedCompanion.Views.Ordonnances.OrdonnancesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ordonnances="clr-namespace:MedCompanion.Views.Ordonnances"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400">
    
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- SÃ©lection du type (MÃ©dicaments grisÃ© / IDE actif / Biologie actif) -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="MedicamentsOrdonnanceButton"
                    Grid.Column="0"
                    Content="ðŸ’Š MÃ©dicaments"
                    Height="50"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#9B59B6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="MedicamentsOrdonnanceButton_Click"
                    ToolTip="GÃ©nÃ©rer une ordonnance de mÃ©dicaments">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#8E44AD"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="IDEOrdonnanceButton"
                    Grid.Column="2"
                    Content="ðŸ¥ IDE"
                    Height="50"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#16A085"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="IDEOrdonnanceButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#138D75"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="BiologieOrdonnanceButton"
                    Grid.Column="4"
                    Content="ðŸ§ª Biologie"
                    Height="50"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BiologieOrdonnanceButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Panel MÃ©dicaments (masquÃ© par dÃ©faut) -->
        <Border x:Name="MedicamentsPanel"
                Grid.Row="2"
                Visibility="Collapsed"
                BorderBrush="#9B59B6"
                BorderThickness="2"
                CornerRadius="8"
                Padding="15"
                Background="White">
            <ordonnances:MedicamentsControl x:Name="MedicamentsControlPanel"/>
        </Border>

        <!-- Liste des ordonnances gÃ©nÃ©rÃ©es -->
        <Grid x:Name="OrdonnancesListGrid"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                      Text="ðŸ“‹ Ordonnances gÃ©nÃ©rÃ©es" 
                      FontSize="13" 
                      FontWeight="SemiBold" 
                      Foreground="#2C3E50"/>
            
            <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" MaxHeight="300">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="OrdonnancesList"
                             ItemsSource="{Binding Ordonnances}"
                             SelectedItem="{Binding SelectedOrdonnance, Mode=TwoWay}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="OrdonnancesList_SelectionChanged"
                             MouseDoubleClick="OrdonnancesList_MouseDoubleClick">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="4,2,4,4"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderBrush="#E0E0E0"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#F0F8FF"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#16A085"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E8F8F5"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#16A085"/>
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <!-- Type d'ordonnance avec icÃ´ne dynamique -->
                                    <TextBlock FontSize="11" FontWeight="Bold" Margin="0,0,0,3">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="IDE">
                                                        <Setter Property="Foreground" Value="#16A085"/>
                                                        <Setter Property="Text" Value="ðŸ¥ Ordonnance IDE"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Biologie">
                                                        <Setter Property="Foreground" Value="#3498DB"/>
                                                        <Setter Property="Text" Value="ðŸ§ª Ordonnance Biologie"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="MÃ©dicaments">
                                                        <Setter Property="Foreground" Value="#9B59B6"/>
                                                        <Setter Property="Text" Value="ðŸ’Š Ordonnance MÃ©dicaments"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Autre">
                                                        <Setter Property="Foreground" Value="#95A5A6"/>
                                                        <Setter Property="Text" Value="ðŸ“„ Ordonnance"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Date de crÃ©ation -->
                                    <TextBlock FontSize="10" Foreground="#2C3E50" FontWeight="SemiBold" Margin="0,0,0,4">
                                        <Run Text="ðŸ“… "/>
                                        <Run Text="{Binding Date, StringFormat='CrÃ©Ã©e le {0:dd/MM/yyyy Ã  HH:mm}'}"/>
                                    </TextBlock>

                                    <!-- AperÃ§u du contenu -->
                                    <TextBlock FontSize="10" Foreground="#5D6D7E" TextWrapping="Wrap" Margin="0,0,0,0" LineHeight="14">
                                        <Run Text="{Binding Preview}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
            
            <!-- Boutons actions -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="OrdonnancesCountLabel"
                          Grid.Column="0"
                          Text="{Binding OrdonnancesCount}"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Foreground="#7F8C8D"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>

                <Button x:Name="ModifierOrdonnanceButton"
                        Grid.Column="2"
                        Content="âœï¸ Modifier"
                        Height="35"
                        Padding="12,0"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Background="#F39C12"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="ModifierOrdonnanceButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E67E22"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ImprimerOrdonnanceButton2"
                        Grid.Column="4"
                        Content="ðŸ–¨ï¸ Imprimer"
                        Height="35"
                        Padding="12,0"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Background="#16A085"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="ImprimerOrdonnanceButton2_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#138D75"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="AvisIAOrdonnanceButton"
                        Grid.Column="6"
                        Content="ðŸ¤– Avis IA"
                        Height="35"
                        Padding="12,0"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Background="#9B59B6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="AvisIAOrdonnanceButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8E44AD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="SupprimerOrdonnanceButton"
                        Grid.Column="8"
                        Content="ðŸ—‘ï¸ Supprimer"
                        Height="35"
                        Padding="12,0"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="SupprimerOrdonnanceButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
        
        <!-- Zone de prÃ©visualisation -->
        <Border Grid.Row="4" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="6" 
                Background="#FAFAFA"
                MinHeight="200">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="12,12,12,8">
                    <TextBlock Text="ðŸ“„ AperÃ§u"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="SauvegarderOrdonnanceButton"
                                Content="ðŸ’¾ Sauvegarder"
                                Height="30"
                                Padding="12,0"
                                Margin="0,0,8,0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Visibility="Collapsed"
                                Click="SauvegarderOrdonnanceButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#229954"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="AnnulerModificationButton"
                                Content="âŒ Annuler"
                                Height="30"
                                Padding="12,0"
                                Margin="0,0,8,0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Background="#E74C3C"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Visibility="Collapsed"
                                Click="AnnulerModificationButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C0392B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="ImprimerOrdonnanceButton"
                                Content="ðŸ–¨ï¸ Ouvrir DOCX"
                                Height="30"
                                Padding="12,0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Background="#16A085"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Visibility="Collapsed"
                                Click="ImprimerOrdonnanceButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#138D75"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12">
                    <RichTextBox x:Name="OrdonnancePreviewText"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 FontSize="13"
                                 BorderThickness="0"
                                 AcceptsTab="False"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
